{
    "name": "arnedesmedt/value-objects",
    "type": "library",
    "description": "Value objects",
    "homepage": "https://github.com/arnedesmedt/value-objects",
    "license": "MIT",
    "authors": [
        {
            "name": "Arne De Smedt",
            "email": "arnedesmdt@gmail.com",
            "homepage": "https://github.com/arnedesmedt"
        }
    ],
    "require": {
        "php": "^8",
        "ext-intl": "*",
        "ext-json": "*",
        "ramsey/uuid": "~4.0",
        "event-engine/php-json-schema": "~2.0",
        "fakerphp/faker": "~1.0",
        "arnedesmedt/php-util": "~0.1"
    },
    "require-dev" : {
        "doctrine/coding-standard": "~11.0",
        "phpmd/phpmd": "~2.0",
        "phpro/grumphp": "~1.0",
        "phpstan/phpstan": "~1.0",
        "phpunit/phpunit" : "~9.0",
        "rector/rector": "~0.1",
        "squizlabs/php_codesniffer" : "~3.0"
    },
    "autoload": {
        "psr-4": {
            "ADS\\ValueObjects\\": "src/",
            "ADS\\ValueObjects\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true
        },
        "sort-packages": true
    },
    "scripts-descriptions": {
        "tests": "Run all tests"
    },
    "scripts": {
        "tests": [
            "vendor/bin/phpcs",
            "vendor/bin/phpstan analyze --no-progress",
            "vendor/bin/phpmd src text phpmd.xml",
            "vendor/bin/phpmd tests text phpmd-tests.xml",
            "vendor/bin/rector --dry-run --no-progress-bar",
            "vendor/bin/phpunit"
        ]
    }
}
