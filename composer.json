{
    "name": "arnedesmedt/value-objects",
    "type": "library",
    "description": "Value objects",
    "homepage": "https://github.com/arnedesmedt/value-objects",
    "license": "MIT",
    "authors": [
        {
            "name": "Arne De Smedt",
            "email": "arnedesmdt@gmail.com",
            "homepage": "https://github.com/arnedesmedt"
        }
    ],
    "require": {
        "php": "^8.0 || ^8.1 || ^8.2 || ^8.3",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-sodium": "*",
        "arnedesmedt/php-exception": "~0.1",
        "ramsey/uuid": "~4.0",
        "symfony/http-kernel": "~6.0 || ~7.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "~12.0",
        "phpmd/phpmd": "~2.0",
        "phpro/grumphp": "~2.0",
        "phpstan/phpstan": "~1.0",
        "phpunit/phpunit": "~10.0",
        "rector/rector": "~1.1",
        "squizlabs/php_codesniffer": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "ADS\\ValueObjects\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ADS\\ValueObjects\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true
        },
        "sort-packages": true
    },
    "scripts-descriptions": {
        "tests": "Run all tests"
    },
    "scripts": {
        "tests": [
            "vendor/bin/phpcbf",
            "vendor/bin/phpcs",
            "vendor/bin/phpstan analyze --no-progress",
            "vendor/bin/phpmd src text phpmd.xml",
            "vendor/bin/phpmd tests text phpmd-tests.xml",
            "vendor/bin/rector --dry-run --no-progress-bar",
            "vendor/bin/phpunit"
        ]
    },
    "bin": [
        "bin/ads-vo-encyrpt-decrypt.php"
    ]
}
